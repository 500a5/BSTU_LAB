#include <msp430.h> 
#include "stdio.h"
#include "system_define.h"
#include "system_variable.h"
#include "function_prototype.h"
#include "main.h"

void Disable_Watchdog(){
    WDTCTL = WDTPW+WDTHOLD; // Disable watchdog timer
}

/*
 * Разработать программу передачи 100 чисел (от 0 до 99)
 * из микроконтроллера MSP430F1611 в ПЭВМ по интерфейсу
 * USB в соответствии с протоколом: модуль USART1,
 * скорость обмена данными 19200 бит/с, режим обмена асинхронный,
 * 8 битов данных без бита четности
 */

#define USB 0

void main(void) {
    Disable_Watchdog();
    Init_System_Clock();
    Init_System();
    UART_init(3,
              7, // databits = 7
              1, // stopbits = 1
              0, // контроль четности
              USB);
    byte mod = 0;
    for (mod = 0; mod <=255; mod++){
        UART_sendbyte(mod);
        UART_sendbyte(0xA5);
    }
//    for (i = 0; i<10; i++){
//            byte recv = UART_getbyte();
//            UART_sendbyte(recv);
//    }
//    byte modulation = 0x00;
//    U1MCTL = modulation;
//    while(UART_getbyte() != 0xFF){
//        modulation++;
//        U1MCTL = modulation;
//    }
//    UART_message("Вычислена модуляция:\n");
//    UART_sendbyte(modulation);
//    while(1){
//        byte i = 0;
//        for (i = 0; i<100; i++){
//            UART_sendbyte(i);
//        }
//        wait_1ms(500);
//    }
    UART_off();
}
